<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snow"
    tools:context=".EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue">

            <TextView
                android:id="@+id/textView_password_reset_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Edit Profile"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView_password_reset_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_password_reset_head"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:text="You can update your profile details."
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textColor="@color/white" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/textView_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Level"
                    android:textAlignment="textStart"
                    android:textColor="@color/blue"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edit_level"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border"
                    android:drawablePadding="8dp"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="Level"
                    android:padding="8dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Name"
                    android:textAlignment="textStart"
                    android:textColor="@color/blue"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border"
                    android:drawablePadding="8dp"
                    android:hint="Name"
                    android:padding="8dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView_surname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Surname"
                    android:textAlignment="textStart"
                    android:textColor="@color/blue"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edit_surname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border"
                    android:drawablePadding="8dp"
                    android:hint="Surname"
                    android:padding="8dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView_personId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="ID"
                    android:textAlignment="textStart"
                    android:textColor="@color/blue"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edit_personId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border"
                    android:drawablePadding="8dp"
                    android:hint="ID"
                    android:padding="8dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView_Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Email"
                    android:textAlignment="textStart"
                    android:textColor="@color/blue"
                    android:textSize="18sp"

                    />

                <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border"
                    android:drawablePadding="8dp"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="Email"
                    android:padding="8dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Phone"
                    android:textAlignment="textStart"
                    android:textColor="@color/blue"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border"
                    android:drawablePadding="8dp"
                    android:hint="Phone"
                    android:padding="8dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Education"
                    android:textAlignment="textStart"
                    android:textColor="@color/blue"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edit_education"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border"
                    android:drawablePadding="8dp"
                    android:hint="Education"
                    android:padding="8dp"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/textView_twitter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Twitter Username"
                    android:textAlignment="textStart"
                    android:textColor="@color/blue"
                    android:textSize="18sp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border">

                    <EditText
                        android:id="@+id/edit_twitter"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginEnd="30dp"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Twitter Username"
                        android:padding="8dp"

                        android:textColor="@color/black"

                        />

                    <ImageView
                        android:id="@+id/twitter_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="6dp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/textView_instagram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Instagram Username"
                    android:textAlignment="textStart"
                    android:textColor="@color/blue"
                    android:textSize="18sp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border">

                    <EditText
                        android:id="@+id/edit_instagram"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginEnd="30dp"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Instagram Username"
                        android:padding="8dp"

                        android:textColor="@color/black"

                        />

                    <ImageView
                        android:id="@+id/instagram_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="6dp" />

                </RelativeLayout>


                <Button
                    android:id="@+id/edit_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/blue"
                    android:text="Update"
                    android:textSize="18sp"
                    app:cornerRadius="10dp" />

                <CheckBox
                    android:id="@+id/edit_cb_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Hide email."
                    android:textColor="@color/blue"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/edit_cb_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Hide phone number"
                    android:textColor="@color/blue"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/edit_cb_instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Hide instagram username."
                    android:textColor="@color/blue"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/edit_cb_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Hide twitter username."
                    android:textColor="@color/blue"
                    android:textSize="18sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</ScrollView>