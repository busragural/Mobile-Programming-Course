<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ForumActivity"
    >

  <Spinner
      android:id="@+id/forum_topic_spinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:layout_marginStart="16dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:background="@drawable/border"
      android:padding="8dp"
      android:layout_marginHorizontal="10dp"


      />

  <EditText
      android:id="@+id/forum_course_code_edit_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:hint="Enter Course Code"
      app:layout_constraintTop_toBottomOf="@id/forum_topic_spinner"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:background="@drawable/border"
      android:layout_marginTop="20dp"
      android:padding="8dp"
      />

  <EditText
      android:id="@+id/forum_reciever"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Enter recipent"
      app:layout_constraintTop_toBottomOf="@id/forum_course_code_edit_text"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:background="@drawable/border"
      android:layout_marginTop="20dp"
      android:padding="8dp"
      android:layout_marginHorizontal="10dp"

      />

  <EditText
      android:id="@+id/forum_message_edit_text"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:hint="Enter your message"
      app:layout_constraintTop_toBottomOf="@id/forum_reciever"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:background="@drawable/border"
      android:layout_marginTop="20dp"
      android:padding="8dp"
      android:layout_marginHorizontal="10dp"

      />



  <Button
      android:id="@+id/forum_submit_button"
      android:layout_width="wrap_content"
      android:layout_height="60dp"
      android:text="Submit"
      android:layout_marginTop="10dp"
      app:layout_constraintTop_toBottomOf="@id/forum_message_edit_text"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:backgroundTint="@color/blue"
      android:textSize="18sp"
      app:cornerRadius="10dp"

      />

</androidx.constraintlayout.widget.ConstraintLayout>
