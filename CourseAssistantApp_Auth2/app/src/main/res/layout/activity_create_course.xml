<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/snow"
    tools:context=".CreateCourseActivity"

    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:id="@+id/cc_cardView">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/textView_password_reset_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="CREATE COURSE"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/blue" />


    <!-- Kurs Adı -->

    <EditText
        android:id="@+id/input_course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course Name"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:padding="8dp"
        android:textColor="@color/black"
        />



    <!-- Kurs Kodu -->


    <EditText
        android:id="@+id/input_course_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course Code"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:padding="8dp"
        android:textColor="@color/black"
        />

    <!-- Başlangıç Tarihi -->

    <EditText
        android:id="@+id/input_start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Date"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:padding="8dp"
        android:textColor="@color/black"/>

    <!-- Grup Sayısı -->

    <EditText
        android:id="@+id/input_group_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number of Groups"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:padding="8dp"
        android:textColor="@color/black"
        />

    <!-- Atanan Kişi Adı Soyadı -->


<!--    <EditText-->
<!--        android:id="@+id/input_assignee_name"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:hint="Atanan Kişinin Adını ve Soyadını Girin"-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:background="@drawable/border"-->
<!--        android:padding="8dp"-->
<!--        android:textColor="@color/black"/>-->

    <!-- CSV Yükleme Butonu -->

<!--        <Button-->
<!--            android:id="@+id/button_upload_csv"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="60dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:backgroundTint="@color/snow"-->
<!--            android:text="Upload CSV"-->
<!--            android:textSize="18sp"-->
<!--            app:cornerRadius="10dp" />-->

            <Button
                android:id="@+id/button_create_course"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/blue"
                android:text="Create"
                android:textSize="18sp"
                app:cornerRadius="10dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
